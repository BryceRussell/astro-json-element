---
import Element from "../Element.astro";
import { Pagination } from '@astro-bryceguy/pagination';

const page = {
	header: {
		tag: "header",
    	style: "font-family:Arial;display:flex;justify-content:space-around;margin:1rem;border-radius:5px;background-color:white;border:3px solid purple",
		class: 'header-purple',
		_heading: {
			tag: "h1",
			text: "Purple",
			style: "font-weight:bold;font-size:3rem;color:purple;"
		},
    _ul: {
        tag: "ul",
        style: "display:flex;align-items:center;gap:1rem;font-weight:bold;font-size:1.25rem;color:purple;",
        _item1: {
            tag: "li",
            _link: {
                tag: "a",
                text: "Home"
            }
        },
        _item2: {
            tag: "li",
            _link: {
                tag: "a",
                text: "Products"
            }
        },
        _item3: {
            tag: "li",
            _link: {
                tag: "a",
                text: "About"
            }
        },
        _item4: {
            tag: "li",
            style: "padding:.75rem 1rem;border-radius:5px;background-color:purple;color:white;",
            _link: {
                tag: "a",
                text: "Contact"
            }
        },
    }
	},
	list: {
		_ul: {
			tag: "ul",
			style: "display:flex;align-items:center;gap:1rem;font-weight:bold;font-size:1.25rem;color:purple;",
			_item1: {
				tag: "li",
				_link: {
					tag: "a",
					text: "Home"
				}
			},
			_item2: {
				tag: "li",
				_link: {
					tag: "a",
					text: "Products"
				}
			},
			_item3: {
				tag: "li",
				_link: {
					tag: "a",
					text: "About"
				}
			},
			_item4: {
				tag: "li",
				style: "padding:.75rem 1rem;border-radius:5px;background-color:purple;color:white;",
				_link: {
					tag: "a",
					text: "Contact"
				}
			},
		}
	}
}
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Astro</title>
	</head>
	<body>
		<h2>Test</h2>
		<Element />
		<Pagination url="" total="64" current="32"/>
		<Element {...page.header}/>
		<Element {...page.list}/>
		<Element {...{
			text: "Text",
			innerHTML: "innerHTML",
			style: "display: flex;gap: 1rem;",
			_first: {
				tag: "span",
				text: "Child slot first"
			},
			_before: {
				tag: "span",
				text: "Child slot before"
			},
			_after: {
				tag: "span",
				text: "Child slot after"
			},
			_last: {
				tag: "span",
				text: "Child slot last"
			}
		}}>
		<p slot="first">Slot First</p>
		<p>Slot</p>
		<p slot="last">Slot Last</p>
		</Element>
		<Element {...{
			text: "Text",
			innerHTML: "innerHTML",
			style: "display: flex;gap: 1rem;",
			class: ['this', 'is', 'a', 'test'],
			defaults: {
				style: 'color:blue;',
				class: 'child'
			},
			_first: {
				tag: "span",
				text: "Child slot first",
				slot: "first"
			},
			_before: {
				tag: "span",
				text: "Child slot before",
				slot: "before"
			},
			_after: {
				tag: "span",
				text: "Child slot after",
				slot: "after"
			},
			_last: {
				tag: "span",
				text: "Child slot last",
				slot: "last"
			}
		}}>
		<p slot="first">Slot First</p>
		<p>Slot</p>
		<p slot="last">Slot Last</p>
		</Element>

		
	</body>
</html>
